<% content_for :title, "Email Templates" %>
<% content_for :head do %>
  <meta name="description" content="Browse and manage your email templates. Create stunning campaigns with our professional template library.">
<% end %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-purple-50">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <div>
                <h1 class="text-3xl font-bold text-gray-900">Email Templates</h1>
                <p class="text-lg text-gray-600 mt-1">Create stunning campaigns with professional templates</p>
              </div>
            </div>
            
            <!-- Stats -->
            <div class="flex flex-wrap gap-6 text-sm text-gray-600">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><%= @templates.total_count %> templates</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <span><%= @templates.where(status: 'active').count %> active</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
                <span><%= @templates.where(status: 'draft').count %> drafts</span>
              </div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 mt-6 lg:mt-0">
            <%= link_to new_template_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Create Template
            <% end %>
            
            <%= link_to marketplace_templates_path, class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 shadow-sm hover:shadow-md" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              Browse Marketplace
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <%= form_with url: templates_path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col lg:flex-row lg:items-center lg:space-x-6 space-y-4 lg:space-y-0">
          <!-- Search -->
          <div class="flex-1">
            <div class="relative">
              <%= form.text_field :search, 
                    value: params[:search],
                    placeholder: "Search templates by name, subject, or description...",
                    class: "w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200",
                    id: "search-input" %>
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          
          <!-- Enhanced Filter Dropdowns -->
          <div class="flex flex-col sm:flex-row gap-3">
            <div class="w-full sm:w-48">
              <%= form.select :category, 
                    options_for_select([['All Categories', '']] + @categories.map { |cat| [cat.humanize, cat] }, params[:category]),
                    {},
                    { class: "w-full px-4 py-4 border-2 border-gray-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-300 bg-white/80 backdrop-blur-sm hover:border-gray-300 text-base font-medium" } %>
            </div>
            
            <div class="w-full sm:w-40">
              <%= form.select :status, 
                    options_for_select([['All Status', ''], ['Active', 'active'], ['Draft', 'draft'], ['Archived', 'archived']], params[:status]),
                    {},
                    { class: "w-full px-4 py-4 border-2 border-gray-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-300 bg-white/80 backdrop-blur-sm hover:border-gray-300 text-base font-medium" } %>
            </div>
            
            <div class="w-full sm:w-40">
              <%= form.select :design_system, 
                    options_for_select([['All Designs', '']] + @design_systems.map { |ds| [ds.humanize, ds] }, params[:design_system]),
                    {},
                    { class: "w-full px-4 py-4 border-2 border-gray-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-300 bg-white/80 backdrop-blur-sm hover:border-gray-300 text-base font-medium" } %>
            </div>
          </div>
          
          <!-- Enhanced Filter Actions -->
          <div class="flex space-x-3">
            <%= form.submit "Filter", class: "px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-2xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
            <% if params.except(:controller, :action, :page).permit!.to_h.any? %>
              <%= link_to templates_path, class: "px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-2xl hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 bg-white/80 backdrop-blur-sm" do %>
                Clear
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Templates Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <% if @templates.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        <% @templates.each_with_index do |template, index| %>
          <div class="group bg-white/80 backdrop-blur-sm rounded-3xl shadow-sm border-2 border-gray-100 hover:shadow-2xl hover:border-indigo-200 transition-all duration-500 transform hover:-translate-y-2 hover:scale-105 stagger-animation overflow-hidden" style="--delay: <%= index * 0.1 %>s">
            <!-- Enhanced Template Preview -->
            <div class="relative overflow-hidden bg-gradient-to-br from-gray-50 via-white to-indigo-50/30 h-52">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-36 h-28 bg-white rounded-2xl shadow-lg border-2 border-gray-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-10 h-10 text-gray-400 group-hover:text-indigo-500 transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
              </div>
              
              <!-- Enhanced Status Badge -->
              <div class="absolute top-4 left-4">
                <% case template.status %>
                <% when 'active' %>
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800 border border-emerald-200 shadow-sm">
                    <div class="w-2 h-2 bg-emerald-400 rounded-full mr-2 animate-pulse"></div>
                    Active
                  </span>
                <% when 'draft' %>
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-amber-100 text-amber-800 border border-amber-200 shadow-sm">
                    <div class="w-2 h-2 bg-amber-400 rounded-full mr-2"></div>
                    Draft
                  </span>
                <% when 'archived' %>
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-gray-100 text-gray-800 border border-gray-200 shadow-sm">
                    <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
                    Archived
                  </span>
                <% end %>
              </div>
              
              <!-- Enhanced Category Badge -->
              <div class="absolute top-4 right-4">
                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-800 border border-indigo-200 shadow-sm">
                  <%= template.template_type.humanize %>
                </span>
              </div>
              
              <!-- Enhanced Hover Actions -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 flex items-center justify-center">
                <div class="flex space-x-3 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                  <%= link_to template_path(template), class: "p-3 bg-white/90 backdrop-blur-sm rounded-xl shadow-lg hover:bg-white hover:scale-110 transition-all duration-300" do %>
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  <%= link_to edit_template_path(template), class: "p-3 bg-white/90 backdrop-blur-sm rounded-xl shadow-lg hover:bg-white hover:scale-110 transition-all duration-300" do %>
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Enhanced Template Info -->
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors duration-300 line-clamp-1">
                  <%= link_to template.name, template_path(template) %>
                </h3>
                <div class="flex items-center space-x-1 text-sm text-gray-500 bg-gray-50 rounded-lg px-2 py-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <span class="font-medium"><%= template.campaigns.count %></span>
                </div>
              </div>
              
              <p class="text-sm text-gray-600 mb-6 line-clamp-2 leading-relaxed">
                <%= template.description.presence || template.subject %>
              </p>
              
              <!-- Enhanced Template Meta -->
              <div class="flex items-center justify-between text-xs text-gray-500 mb-6">
                <div class="flex items-center space-x-2 bg-gray-50 rounded-lg px-3 py-2">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="font-medium"><%= time_ago_in_words(template.updated_at) %> ago</span>
                </div>
                <% if template.design_system.present? %>
                  <span class="px-3 py-2 bg-indigo-50 text-indigo-700 rounded-lg font-medium border border-indigo-100">
                    <%= template.design_system.humanize %>
                  </span>
                <% end %>
              </div>
              
              <!-- Enhanced Action Buttons -->
              <div class="flex space-x-3">
                <%= link_to "Use Template", new_campaign_path(template_id: template.id), 
                      class: "flex-1 text-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
                
                <div class="relative" data-dropdown>
                  <button type="button" class="p-3 text-gray-400 hover:text-gray-600 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-xl transition-all duration-300 border-2 border-gray-200 hover:border-gray-300" data-dropdown-toggle>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                    </svg>
                  </button>
                  
                  <div class="absolute right-0 mt-2 w-56 bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl border-2 border-gray-100 z-10 hidden overflow-hidden" data-dropdown-menu>
                    <div class="py-2">
                      <%= link_to template_path(template), class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 transition-all duration-200" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View Details
                      <% end %>
                      
                      <%= link_to edit_template_path(template), class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 transition-all duration-200" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit Template
                      <% end %>
                      
                      <%= link_to duplicate_template_path(template), method: :post, class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 transition-all duration-200" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Duplicate
                      <% end %>
                      
                      <div class="border-t border-gray-100 my-2"></div>
                      
                      <%= link_to template_path(template), method: :delete, 
                            data: { confirm: "Are you sure you want to delete this template?" },
                            class: "flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 transition-all duration-200" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Enhanced Pagination -->
      <% if @templates.respond_to?(:total_pages) && @templates.total_pages > 1 %>
        <div class="mt-12 flex justify-center">
          <%= paginate @templates, theme: 'twitter-bootstrap-4', 
                nav_class: "flex items-center space-x-2",
                link_class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200",
                active_class: "px-4 py-2 text-sm font-medium text-white bg-purple-600 border border-purple-600 rounded-lg" %>
        </div>
      <% end %>
    <% else %>
      <!-- Enhanced Empty State -->
      <div class="text-center py-16">
        <div class="w-24 h-24 bg-gradient-to-br from-purple-100 to-indigo-100 rounded-3xl flex items-center justify-center mx-auto mb-8">
          <svg class="w-12 h-12 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">
          <% if params.except(:controller, :action, :page).permit!.to_h.any? %>
            No templates found
          <% else %>
            No templates yet
          <% end %>
        </h3>
        
        <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
          <% if params.except(:controller, :action, :page).any? %>
            Try adjusting your filters or search terms to find what you're looking for.
          <% else %>
            Get started by creating your first email template or browse our marketplace for inspiration.
          <% end %>
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <% if params.except(:controller, :action, :page).any? %>
            <%= link_to templates_path, class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Clear Filters
            <% end %>
          <% end %>
          
          <%= link_to new_template_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Create Your First Template
          <% end %>
          
          <%= link_to templates_marketplace_path, class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            Browse Marketplace
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- JavaScript for Interactive Elements -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Stagger animations
    const animatedElements = document.querySelectorAll('.stagger-animation');
    animatedElements.forEach((element, index) => {
      element.style.animationDelay = `${index * 0.1}s`;
      element.classList.add('animate-fade-in-up');
    });
    
    // Dropdown functionality
    const dropdowns = document.querySelectorAll('[data-dropdown]');
    dropdowns.forEach(dropdown => {
      const toggle = dropdown.querySelector('[data-dropdown-toggle]');
      const menu = dropdown.querySelector('[data-dropdown-menu]');
      
      toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        
        // Close other dropdowns
        dropdowns.forEach(otherDropdown => {
          if (otherDropdown !== dropdown) {
            otherDropdown.querySelector('[data-dropdown-menu]').classList.add('hidden');
          }
        });
        
        menu.classList.toggle('hidden');
      });
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', () => {
      dropdowns.forEach(dropdown => {
        dropdown.querySelector('[data-dropdown-menu]').classList.add('hidden');
      });
    });
    
    // Auto-submit search form on input (debounced)
    const searchInput = document.getElementById('search-input');
    let searchTimeout;
    
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          if (this.value.length >= 3 || this.value.length === 0) {
            this.form.submit();
          }
        }, 500);
      });
    }
    
    // Auto-submit filter forms on change
    const filterSelects = document.querySelectorAll('select[name="category"], select[name="status"], select[name="design_system"]');
    filterSelects.forEach(select => {
      select.addEventListener('change', function() {
        this.form.submit();
      });
    });
  });
</script>

