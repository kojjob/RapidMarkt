<% content_for :title, "Contacts - RapidMarkt" %>

<!-- Modern Contacts Page with Gradient Background -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <!-- Enhanced Page Header -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8">
      <div class="mb-6 lg:mb-0">
        <div class="flex items-center space-x-3">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Contact Management</h1>
            <p class="text-lg text-gray-600 mt-1">Organize and engage with your audience</p>
          </div>
        </div>
        
        <!-- Contact Stats -->
        <div class="flex items-center space-x-6 mt-4">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span class="text-sm text-gray-600"><%= @contacts.where(status: 'subscribed').count %> subscribed</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-red-400 rounded-full"></div>
            <span class="text-sm text-gray-600"><%= @contacts.where(status: 'unsubscribed').count %> unsubscribed</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
            <span class="text-sm text-gray-600"><%= @current_account.tags.count %> tags</span>
          </div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
        <%= link_to new_contact_path, class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Contact
        <% end %>
        <%= link_to import_contacts_path, class: "inline-flex items-center px-6 py-3 rounded-xl font-medium text-gray-700 bg-white border border-gray-200 hover:bg-gray-50 shadow-md hover:shadow-lg transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Import Contacts
        <% end %>
        <%= link_to export_contacts_path(format: :csv, search: params[:search], status: params[:status], tag: params[:tag]), class: "inline-flex items-center px-6 py-3 rounded-xl font-medium text-emerald-700 bg-emerald-100 border border-emerald-200 hover:bg-emerald-200 shadow-md hover:shadow-lg transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Export CSV
        <% end %>
      </div>
    </div>

    <!-- Enhanced Search and Filters -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 mb-8">
      <div class="p-6">
        <%= form_with url: contacts_path, method: :get, local: true, class: "space-y-6" do |form| %>
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Search Field -->
            <div class="lg:col-span-5">
              <label class="block text-sm font-semibold text-gray-900 mb-2">Search Contacts</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                <%= form.text_field :search, value: params[:search], 
                    placeholder: "Search by name, email, or tags...",
                    class: "block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-xl leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
              </div>
            </div>
            
            <!-- Status Filter -->
            <div class="lg:col-span-2">
              <label class="block text-sm font-semibold text-gray-900 mb-2">Status</label>
              <%= form.select :status, 
                  options_for_select([
                    ['All Status', ''],
                    ['✅ Subscribed', 'subscribed'],
                    ['❌ Unsubscribed', 'unsubscribed']
                  ], params[:status]),
                  {},
                  { class: "block w-full py-3 px-3 border border-gray-200 bg-white rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
            </div>
            
            <!-- Tag Filter -->
            <div class="lg:col-span-2">
              <label class="block text-sm font-semibold text-gray-900 mb-2">Tag</label>
              <%= form.collection_select :tag, 
                  @current_account.tags.order(:name), 
                  :id, :name, 
                  { prompt: "All Tags" },
                  { class: "block w-full py-3 px-3 border border-gray-200 bg-white rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
            </div>
            
            <!-- Action Buttons -->
            <div class="lg:col-span-3 flex items-end space-x-3">
              <%= form.submit "Search", 
                  class: "flex-1 inline-flex items-center justify-center px-4 py-3 border border-transparent text-sm font-semibold rounded-xl text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-md" %>
              <% if params[:search].present? || params[:status].present? || params[:tag].present? %>
                <%= link_to contacts_path, class: "inline-flex items-center justify-center px-4 py-3 border border-gray-200 text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-md" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Enhanced Bulk Actions -->
    <% if @contacts.any? %>
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
          <div class="flex items-center space-x-6">
            <label class="flex items-center group cursor-pointer">
              <input type="checkbox" id="select-all" 
                     class="w-5 h-5 rounded border-gray-300 text-green-600 focus:ring-green-500 focus:ring-offset-0 transition-all duration-200">
              <span class="ml-3 text-sm font-medium text-gray-700 group-hover:text-gray-900">Select All</span>
            </label>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-600" id="selected-count">0 contacts selected</span>
            </div>
          </div>
          
          <div class="flex items-center space-x-3" id="bulk-actions" style="display: none;">
            <button type="button" id="bulk-tag"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-semibold rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-md">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              Add Tags
            </button>
            <button type="button" id="bulk-unsubscribe"
                    class="inline-flex items-center px-4 py-2 border border-gray-200 text-sm font-semibold rounded-lg text-orange-700 bg-orange-100 hover:bg-orange-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-200 shadow-md">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
              </svg>
              Unsubscribe
            </button>
            <button type="button" id="bulk-delete"
                    class="inline-flex items-center px-4 py-2 border border-gray-200 text-sm font-semibold rounded-lg text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200 shadow-md">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Enhanced Contacts Grid -->
    <% if @contacts.any? %>
      <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
        <% @contacts.each do |contact| %>
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
            <!-- Contact Status Indicator -->
            <div class="absolute top-4 right-4 z-10">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold 
                <%= contact.subscribed? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= contact.subscribed? ? '✅' : '❌' %>
                <%= contact.status.humanize %>
              </span>
            </div>
            
            <!-- Selection Checkbox -->
            <div class="absolute top-4 left-4 z-10">
              <input type="checkbox" class="contact-checkbox w-5 h-5 rounded border-gray-300 text-green-600 focus:ring-green-500 focus:ring-offset-0 transition-all duration-200" 
                     value="<%= contact.id %>">
            </div>
            
            <!-- Contact Avatar -->
            <div class="flex justify-center pt-8 pb-4">
              <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-emerald-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <%= contact.first_name&.first&.upcase %><%= contact.last_name&.first&.upcase %>
              </div>
            </div>
            
            <!-- Contact Card Content -->
            <div class="px-6 pb-6">
              <!-- Contact Header -->
              <div class="text-center mb-4">
                <h3 class="text-xl font-bold text-gray-900 mb-1">
                  <%= contact.first_name %> <%= contact.last_name %>
                </h3>
                <p class="text-gray-600 text-sm break-all">
                  <%= contact.email %>
                </p>
              </div>
              
              <!-- Contact Stats -->
              <div class="grid grid-cols-2 gap-4 mb-4">
                <div class="bg-blue-50 rounded-lg p-3">
                  <div class="flex items-center">
                    <div class="p-2 bg-blue-100 rounded-lg">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.83 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-2xl font-bold text-blue-900"><%= contact.campaign_contacts.where.not(sent_at: nil).count %></p>
                      <p class="text-xs text-blue-600 font-medium">Received</p>
                    </div>
                  </div>
                </div>
                <div class="bg-green-50 rounded-lg p-3">
                  <div class="flex items-center">
                    <div class="p-2 bg-green-100 rounded-lg">
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-2xl font-bold text-green-900"><%= contact.campaign_contacts.where.not(opened_at: nil).count %></p>
                      <p class="text-xs text-green-600 font-medium">Opened</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Contact Timeline -->
              <div class="space-y-2 mb-4">
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Added <%= time_ago_in_words(contact.created_at) %> ago
                </div>
                <% if contact.last_opened_at.present? %>
                  <div class="flex items-center text-sm text-green-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    Last opened <%= time_ago_in_words(contact.last_opened_at) %> ago
                  </div>
                <% end %>
              </div>
              
              <!-- Contact Tags -->
              <% if contact.tags.any? %>
                <div class="mb-4">
                  <div class="flex flex-wrap gap-2">
                    <% contact.tags.each do |tag| %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800 border border-blue-200">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <%= tag.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
              
              <!-- Action Buttons -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="flex space-x-2">
                  <%= link_to contact_path(contact), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    View
                  <% end %>
                  <%= link_to edit_contact_path(contact), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-green-700 bg-green-100 rounded-lg hover:bg-green-200 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  <% end %>
                </div>
                
                <!-- Quick Actions -->
                <div class="flex space-x-1">
                  <% if contact.subscribed? %>
                    <button type="button" class="p-2 text-orange-600 bg-orange-100 rounded-lg hover:bg-orange-200 transition-colors duration-200" title="Unsubscribe">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
                      </svg>
                    </button>
                  <% else %>
                    <button type="button" class="p-2 text-green-600 bg-green-100 rounded-lg hover:bg-green-200 transition-colors duration-200" title="Resubscribe">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </button>
                  <% end %>
                  <button type="button" class="p-2 text-red-600 bg-red-100 rounded-lg hover:bg-red-200 transition-colors duration-200" title="Delete">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @contacts.respond_to?(:total_pages) %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
              <% if @contacts.prev_page %>
                <%= link_to "Previous", contacts_path(page: @contacts.prev_page, search: params[:search], status: params[:status], tag: params[:tag]), 
                    class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
              <% if @contacts.next_page %>
                <%= link_to "Next", contacts_path(page: @contacts.next_page, search: params[:search], status: params[:status], tag: params[:tag]), 
                    class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing
                  <span class="font-medium"><%= (@contacts.current_page - 1) * @contacts.limit_value + 1 %></span>
                  to
                  <span class="font-medium"><%= [@contacts.current_page * @contacts.limit_value, @contacts.total_count].min %></span>
                  of
                  <span class="font-medium"><%= @contacts.total_count %></span>
                  results
                </p>
              </div>
              <div>
                <%= paginate @contacts if defined?(Kaminari) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Beautiful Empty State -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 text-center py-16">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 bg-gradient-to-br from-green-100 to-emerald-100 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if params[:search].present? || params[:status].present? || params[:tag].present? %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              <% end %>
            </svg>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            <% if params[:search].present? || params[:status].present? || params[:tag].present? %>
              No contacts found
            <% else %>
              Ready to build your audience?
            <% end %>
          </h3>
          
