<!-- Enhanced User Dropdown with RapidMarkt Design System -->
<div class="relative" data-controller="dropdown">
  <!-- User Avatar Button -->
  <button type="button"
          class="group relative bg-white rounded-2xl flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 hover:shadow-lg transition-all duration-300 border-2 border-gray-100 hover:border-purple-200 p-2"
          data-action="click->dropdown#toggle"
          data-dropdown-target="button"
          aria-expanded="false"
          aria-haspopup="true">
    
    <!-- User Avatar with Status Indicator -->
    <div class="relative">
      <%= user_avatar(current_user,
                      size: 'h-10 w-10',
                      text_size: 'text-sm',
                      additional_classes: 'group-hover:shadow-lg transition-all duration-300') %>

      <!-- Online Status Indicator -->
      <div class="absolute -bottom-0.5 -right-0.5">
        <%= online_status_indicator(current_user) %>
      </div>
    </div>
    
    <!-- User Info (Hidden on mobile) -->
    <div class="hidden md:block ml-3 text-left">
      <div class="text-sm font-semibold text-gray-900 group-hover:text-purple-700 transition-colors">
        <%= current_user.display_name %>
      </div>
      <div class="text-xs text-gray-500 flex items-center">
        <%= user_role_badge(current_user) %>
      </div>
    </div>
    
    <!-- Dropdown Arrow -->
    <div class="hidden md:block ml-2">
      <svg class="w-4 h-4 text-gray-400 group-hover:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </div>
  </button>
  
  <!-- Dropdown Menu -->
  <div class="origin-top-right absolute right-0 mt-3 w-80 rounded-2xl shadow-2xl bg-white ring-1 ring-black ring-opacity-5 focus:outline-none hidden border border-gray-100 z-dropdown dropdown-menu"
       data-dropdown-target="menu"
       role="menu"
       aria-orientation="vertical">
    
    <!-- User Profile Header -->
    <div class="p-6 bg-gradient-to-r from-purple-500 to-pink-500 rounded-t-2xl">
      <div class="flex items-center">
        <%= user_avatar(current_user,
                        size: 'h-12 w-12',
                        text_size: 'text-lg',
                        additional_classes: 'bg-white bg-opacity-20 backdrop-blur-sm') %>
        <div class="ml-4 flex-1">
          <div class="text-lg font-semibold text-white">
            <%= current_user.display_name %>
          </div>
          <div class="text-sm text-purple-100">
            <%= current_user.email %>
          </div>
          <div class="flex items-center mt-1">
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-white bg-opacity-20 text-white">
              <%= current_user.role.humanize %>
            </span>
            <span class="ml-2 flex items-center text-xs text-green-200">
              <div class="w-2 h-2 bg-green-300 rounded-full mr-1"></div>
              <%= last_active_text(current_user) %>
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Account Info -->
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm font-medium text-gray-900">
            <%= current_user.account.name %>
          </div>
          <div class="text-xs text-gray-500 capitalize">
            <%= current_user.account.plan %> Plan
          </div>
        </div>
        <div class="flex items-center">
          <% if current_user.account.team_size > 1 %>
            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <%= current_user.account.team_size %> members
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-800">
              Solo Business
            </span>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Navigation Menu -->
    <div class="py-2" role="none">
      <!-- Profile & Settings -->
      <div class="px-2">
        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-4 py-2">
          Profile & Settings
        </div>
        
        <%= link_to account_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 rounded-xl mx-2 transition-all duration-200", role: "menuitem" do %>
          <div class="w-8 h-8 bg-gray-100 group-hover:bg-purple-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
            <svg class="w-4 h-4 text-gray-500 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <div class="font-medium">Account Settings</div>
            <div class="text-xs text-gray-500">Manage your profile</div>
          </div>
        <% end %>
        
        <% if current_user.can_manage_team? %>
          <%= link_to team_account_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 rounded-xl mx-2 transition-all duration-200", role: "menuitem" do %>
            <div class="w-8 h-8 bg-gray-100 group-hover:bg-purple-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
              <svg class="w-4 h-4 text-gray-500 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-medium">Team Management</div>
              <div class="text-xs text-gray-500">Invite and manage team members</div>
            </div>
          <% end %>
        <% end %>
        
        <% if current_user.can_access_billing? %>
          <%= link_to billing_account_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 rounded-xl mx-2 transition-all duration-200", role: "menuitem" do %>
            <div class="w-8 h-8 bg-gray-100 group-hover:bg-purple-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
              <svg class="w-4 h-4 text-gray-500 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-medium">Billing & Plans</div>
              <div class="text-xs text-gray-500">Manage subscription</div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Quick Actions -->
      <div class="px-2 mt-2">
        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider px-4 py-2">
          Quick Actions
        </div>
        
        <%= link_to new_campaign_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-green-50 hover:text-green-700 rounded-xl mx-2 transition-all duration-200", role: "menuitem" do %>
          <div class="w-8 h-8 bg-gray-100 group-hover:bg-green-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
            <svg class="w-4 h-4 text-gray-500 group-hover:text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <div class="flex-1">
            <div class="font-medium">New Campaign</div>
            <div class="text-xs text-gray-500">Create email campaign</div>
          </div>
        <% end %>
        
        <%= link_to analytics_path, class: "group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 rounded-xl mx-2 transition-all duration-200", role: "menuitem" do %>
          <div class="w-8 h-8 bg-gray-100 group-hover:bg-blue-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
            <svg class="w-4 h-4 text-gray-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <div class="font-medium">Analytics</div>
            <div class="text-xs text-gray-500">View performance</div>
          </div>
        <% end %>
      </div>
      
      <!-- Divider -->
      <div class="border-t border-gray-100 my-2"></div>
      
      <!-- Sign Out -->
      <div class="px-2">
        <%= link_to destroy_user_session_path, 
            data: { turbo_method: :delete },
            class: "group flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 rounded-xl mx-2 transition-all duration-200", 
            role: "menuitem" do %>
          <div class="w-8 h-8 bg-red-50 group-hover:bg-red-100 rounded-lg flex items-center justify-center mr-3 transition-colors">
            <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </div>
          <div class="flex-1">
            <div class="font-medium">Sign Out</div>
            <div class="text-xs text-red-400">End your session</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
