<!-- Notification Bell Component -->
<div class="relative mr-4" data-controller="dropdown">
  <!-- Notification Bell Button -->
  <button type="button"
          class="group relative bg-white rounded-xl p-2 text-gray-400 hover:text-purple-500 hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 border border-gray-200 hover:border-purple-200"
          data-action="click->dropdown#toggle"
          data-dropdown-target="button"
          aria-expanded="false"
          aria-haspopup="true">
    <span class="sr-only">View notifications</span>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
    </svg>
    
    <!-- Notification Badge -->
    <% if defined?(@unread_notifications_count) && @unread_notifications_count > 0 %>
      <div class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 rounded-full flex items-center justify-center">
        <span class="text-xs font-bold text-white">
          <%= @unread_notifications_count > 9 ? '9+' : @unread_notifications_count %>
        </span>
      </div>
    <% end %>
  </button>
  
  <!-- Notification Dropdown -->
  <div class="origin-top-right absolute right-0 mt-3 w-80 rounded-2xl shadow-2xl bg-white ring-1 ring-black ring-opacity-5 focus:outline-none hidden border border-gray-100 z-dropdown dropdown-menu"
       data-dropdown-target="menu"
       role="menu"
       aria-orientation="vertical">
    
    <!-- Header -->
    <div class="p-4 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Notifications</h3>
        <% if defined?(@unread_notifications_count) && @unread_notifications_count > 0 %>
          <button type="button" class="text-sm text-purple-600 hover:text-purple-700 font-medium">
            Mark all read
          </button>
        <% end %>
      </div>
    </div>
    
    <!-- Notifications List -->
    <div class="max-h-96 overflow-y-auto">
      <% if defined?(@recent_notifications) && @recent_notifications.any? %>
        <% @recent_notifications.each do |notification| %>
          <div class="p-4 hover:bg-gray-50 border-b border-gray-50 last:border-b-0 transition-colors">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                  <% case notification[:type] %>
                  <% when 'campaign_sent' %>
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.83 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  <% when 'new_contact' %>
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                  <% when 'campaign_completed' %>
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
              <div class="ml-3 flex-1">
                <p class="text-sm font-medium text-gray-900">
                  <%= notification[:title] %>
                </p>
                <p class="text-sm text-gray-600 mt-1">
                  <%= notification[:message] %>
                </p>
                <p class="text-xs text-gray-500 mt-2">
                  <%= time_ago_in_words(notification[:created_at]) %> ago
                </p>
              </div>
              <% unless notification[:read] %>
                <div class="flex-shrink-0">
                  <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="p-8 text-center">
          <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
          </div>
          <h3 class="text-sm font-medium text-gray-900 mb-2">No notifications</h3>
          <p class="text-sm text-gray-500">You're all caught up! Check back later for updates.</p>
        </div>
      <% end %>
    </div>
    
    <!-- Footer -->
    <% if defined?(@recent_notifications) && @recent_notifications.any? %>
      <div class="p-4 border-t border-gray-100">
        <%= link_to "#", class: "block text-center text-sm font-medium text-purple-600 hover:text-purple-700" do %>
          View all notifications
        <% end %>
      </div>
    <% end %>
  </div>
</div>
