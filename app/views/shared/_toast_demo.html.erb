<%# Toast Demo Component - For testing and showcasing the enhanced toast system %>

<div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-200">
  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
    </svg>
    Enhanced Toast System Demo
  </h3>
  
  <p class="text-sm text-gray-600 mb-6">
    Test the new enhanced toast notifications with different types, positions, and features.
  </p>
  
  <!-- Basic Toast Types -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Basic Toast Types</h4>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
      <button onclick="toast.success('Operation completed successfully!')" 
              class="px-3 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition-colors text-sm font-medium">
        Success
      </button>
      
      <button onclick="toast.error('Something went wrong!')" 
              class="px-3 py-2 bg-red-100 text-red-800 rounded-lg hover:bg-red-200 transition-colors text-sm font-medium">
        Error
      </button>
      
      <button onclick="toast.warning('Please check your input')" 
              class="px-3 py-2 bg-yellow-100 text-yellow-800 rounded-lg hover:bg-yellow-200 transition-colors text-sm font-medium">
        Warning
      </button>
      
      <button onclick="toast.info('Here is some information')" 
              class="px-3 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">
        Info
      </button>
    </div>
  </div>
  
  <!-- Campaign-Specific Toasts -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Campaign Toasts</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <button onclick="toast.campaign.created('Welcome Series')" 
              class="px-3 py-2 bg-purple-100 text-purple-800 rounded-lg hover:bg-purple-200 transition-colors text-sm font-medium">
        Campaign Created
      </button>
      
      <button onclick="toast.campaign.sent('Newsletter', 1250)" 
              class="px-3 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition-colors text-sm font-medium">
        Campaign Sent
      </button>
      
      <button onclick="toast.campaign.scheduled('Product Launch', 'Tomorrow at 9:00 AM')" 
              class="px-3 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">
        Campaign Scheduled
      </button>
      
      <button onclick="toast.campaign.failed('Newsletter', 'Invalid email template')" 
              class="px-3 py-2 bg-red-100 text-red-800 rounded-lg hover:bg-red-200 transition-colors text-sm font-medium">
        Campaign Failed
      </button>
    </div>
  </div>
  
  <!-- Contact-Specific Toasts -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Contact Toasts</h4>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
      <button onclick="toast.contact.imported(150)" 
              class="px-3 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition-colors text-sm font-medium">
        Contacts Imported
      </button>
      
      <button onclick="toast.contact.subscribed('john@example.com')" 
              class="px-3 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">
        New Subscriber
      </button>
      
      <button onclick="toast.contact.unsubscribed('jane@example.com')" 
              class="px-3 py-2 bg-yellow-100 text-yellow-800 rounded-lg hover:bg-yellow-200 transition-colors text-sm font-medium">
        Unsubscribed
      </button>
    </div>
  </div>
  
  <!-- System Toasts -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">System Toasts</h4>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
      <button onclick="toast.system.saved()" 
              class="px-3 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition-colors text-sm font-medium">
        Saved
      </button>
      
      <button onclick="toast.system.autoSaved()" 
              class="px-3 py-2 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium">
        Auto-saved
      </button>
      
      <button onclick="toast.system.updateAvailable()" 
              class="px-3 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors text-sm font-medium">
        Update Available
      </button>
    </div>
  </div>
  
  <!-- Special Features -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Special Features</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <button onclick="toast.loading('Processing your request...')" 
              class="px-3 py-2 bg-purple-100 text-purple-800 rounded-lg hover:bg-purple-200 transition-colors text-sm font-medium">
        Loading Toast
      </button>
      
      <button onclick="toast.show('success', 'This toast will not auto-dismiss', { autoDismiss: false, title: 'Persistent' })" 
              class="px-3 py-2 bg-indigo-100 text-indigo-800 rounded-lg hover:bg-indigo-200 transition-colors text-sm font-medium">
        Persistent Toast
      </button>
      
      <button onclick="toast.show('info', 'This toast appears at bottom-left', { position: 'bottom-left', title: 'Different Position' })" 
              class="px-3 py-2 bg-cyan-100 text-cyan-800 rounded-lg hover:bg-cyan-200 transition-colors text-sm font-medium">
        Bottom-Left Position
      </button>
      
      <button onclick="toast.show('warning', 'This toast lasts 10 seconds', { duration: 10000, title: 'Long Duration' })" 
              class="px-3 py-2 bg-orange-100 text-orange-800 rounded-lg hover:bg-orange-200 transition-colors text-sm font-medium">
        Long Duration
      </button>
    </div>
  </div>
  
  <!-- Multiple Toasts -->
  <div class="mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Multiple Toasts</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <button onclick="showMultipleToasts()" 
              class="px-3 py-2 bg-gradient-to-r from-purple-100 to-pink-100 text-purple-800 rounded-lg hover:from-purple-200 hover:to-pink-200 transition-all text-sm font-medium">
        Show Multiple Toasts
      </button>
      
      <button onclick="toast.dismissAll()" 
              class="px-3 py-2 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium">
        Dismiss All Toasts
      </button>
    </div>
  </div>
  
  <!-- Toast Positions -->
  <div>
    <h4 class="text-sm font-medium text-gray-900 mb-3">Toast Positions</h4>
    <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 text-xs">
      <button onclick="toast.show('info', 'Top Left', { position: 'top-left', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Top Left
      </button>
      
      <button onclick="toast.show('info', 'Top Center', { position: 'top-center', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Top Center
      </button>
      
      <button onclick="toast.show('info', 'Top Right', { position: 'top-right', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Top Right
      </button>
      
      <button onclick="toast.show('info', 'Bottom Left', { position: 'bottom-left', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Bottom Left
      </button>
      
      <button onclick="toast.show('info', 'Bottom Center', { position: 'bottom-center', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Bottom Center
      </button>
      
      <button onclick="toast.show('info', 'Bottom Right', { position: 'bottom-right', title: 'Position' })" 
              class="px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
        Bottom Right
      </button>
    </div>
  </div>
</div>

<script>
  function showMultipleToasts() {
    setTimeout(() => toast.success('First toast!'), 0);
    setTimeout(() => toast.info('Second toast!'), 200);
    setTimeout(() => toast.warning('Third toast!'), 400);
    setTimeout(() => toast.error('Fourth toast!'), 600);
  }
</script>
