                <div id="tag-selection" class="<%= 'hidden' unless @campaign.recipient_type == 'tags' %>">
                  <label class="block text-xs font-medium text-gray-700 mb-2">Select Tags</label>
                  <div class="space-y-2 max-h-32 overflow-y-auto">
