<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
  <div class="container mx-auto px-6 py-12">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-2xl shadow-lg mb-6 transform hover:scale-105 transition-transform duration-300">
        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-purple-900 to-indigo-900 bg-clip-text text-transparent mb-4">Analytics Dashboard</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">Track your email marketing performance and campaign insights with comprehensive analytics and real-time data visualization.</p>
    </div>

    <!-- Date Range Filter -->
    <div class="mb-12 bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl p-8 border-0 hover:shadow-xl transition-all duration-300">
      <%= form_with url: analytics_path, method: :get, local: true, class: "flex flex-col lg:flex-row items-end space-y-4 lg:space-y-0 lg:space-x-6" do |form| %>
        <div class="flex-1 w-full">
          <%= form.label :start_date, "Start Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= form.date_field :start_date, value: params[:start_date] || 30.days.ago.to_date, class: "block w-full border-0 rounded-xl shadow-sm bg-white/80 focus:ring-2 focus:ring-purple-500 focus:bg-white transition-all duration-200 px-4 py-3" %>
        </div>
        <div class="flex-1 w-full">
          <%= form.label :end_date, "End Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= form.date_field :end_date, value: params[:end_date] || Date.current, class: "block w-full border-0 rounded-xl shadow-sm bg-white/80 focus:ring-2 focus:ring-purple-500 focus:bg-white transition-all duration-200 px-4 py-3" %>
        </div>
        <div class="w-full lg:w-auto">
          <%= form.submit "Update Analytics", class: "w-full lg:w-auto bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-8 py-3 rounded-xl hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-purple-500 transform hover:scale-105 transition-all duration-200 font-semibold shadow-lg" %>
        </div>
      <% end %>
      
      <div class="mt-6 flex justify-center">
        <%= link_to analytics_export_path(format: :csv, start_date: params[:start_date], end_date: params[:end_date]), class: "inline-flex items-center px-6 py-3 border-0 rounded-xl shadow-sm text-sm font-semibold text-gray-700 bg-white/80 hover:bg-white hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 transform hover:scale-105 transition-all duration-200" do %>
          <svg class="-ml-1 mr-3 h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Export Analytics Data
        <% end %>
      </div>
    </div>

    <!-- Overview Statistics -->
    <div class="mb-12">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Performance Overview</h2>
        <p class="text-gray-600">Key metrics and insights from your email marketing campaigns</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Total Campaigns -->
        <div class="group bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center mb-4">
                <div class="p-3 bg-white/20 rounded-xl">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div class="ml-1">
                  <svg class="h-4 w-4 text-white/60 group-hover:text-green-300 transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                  </svg>
                </div>
              </div>
              <div class="text-white">
                <p class="text-sm font-medium text-white/80 mb-1">Total Campaigns</p>
                <p class="text-3xl font-bold"><%= number_with_delimiter(@overview_stats[:total_campaigns]) %></p>
                <p class="text-xs text-white/60 mt-1">Active marketing campaigns</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Emails Sent -->
        <div class="group bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center mb-4">
                <div class="p-3 bg-white/20 rounded-xl">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-1">
                  <svg class="h-4 w-4 text-white/60 group-hover:text-green-300 transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                  </svg>
                </div>
              </div>
              <div class="text-white">
                <p class="text-sm font-medium text-white/80 mb-1">Emails Sent</p>
                <p class="text-3xl font-bold"><%= number_with_delimiter(@overview_stats[:emails_sent]) %></p>
                <p class="text-xs text-white/60 mt-1">Total email deliveries</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Average Open Rate -->
        <div class="group bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center mb-4">
                <div class="p-3 bg-white/20 rounded-xl">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </div>
                <div class="ml-1">
                  <svg class="h-4 w-4 text-white/60 group-hover:text-green-300 transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                  </svg>
                </div>
              </div>
              <div class="text-white">
                <p class="text-sm font-medium text-white/80 mb-1">Average Open Rate</p>
                <p class="text-3xl font-bold"><%= number_to_percentage(@overview_stats[:avg_open_rate], precision: 1) %></p>
                <p class="text-xs text-white/60 mt-1">Email engagement rate</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Total Contacts -->
        <div class="group bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center mb-4">
                <div class="p-3 bg-white/20 rounded-xl">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div class="ml-1">
                  <svg class="h-4 w-4 text-white/60 group-hover:text-green-300 transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                  </svg>
                </div>
              </div>
              <div class="text-white">
                <p class="text-sm font-medium text-white/80 mb-1">Total Contacts</p>
                <p class="text-3xl font-bold"><%= number_with_delimiter(@overview_stats[:total_contacts]) %></p>
                <p class="text-xs text-white/60 mt-1">Subscriber database</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 mb-12">
      <!-- Engagement Trends Chart -->
      <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="p-3 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl mr-4">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900">Engagement Trends</h3>
              <p class="text-sm text-gray-600">Email opens and clicks over time</p>
            </div>
          </div>
          <div class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border-2 border-dashed border-blue-200">
            <div class="text-center">
              <div class="p-4 bg-white rounded-xl shadow-sm mb-4 inline-block">
                <svg class="mx-auto h-12 w-12 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <p class="text-sm font-semibold text-gray-700 mb-1">Interactive Chart Coming Soon</p>
              <p class="text-xs text-gray-500">Advanced analytics visualization will be available here</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Campaign Performance -->
      <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="p-3 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl mr-4">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900">Top Performers</h3>
              <p class="text-sm text-gray-600">Best campaigns by open rate</p>
            </div>
          </div>
          <div class="space-y-4">
            <% if @campaign_performance.any? %>
              <% @campaign_performance.first(5).each_with_index do |campaign, index| %>
                <div class="group p-4 bg-white/60 rounded-xl hover:bg-white hover:shadow-md transition-all duration-200">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center">
                        <div class="flex-shrink-0">
                          <% if index == 0 %>
                            <div class="w-8 h-8 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
                              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                              </svg>
                            </div>
                          <% elsif index == 1 %>
                            <div class="w-8 h-8 bg-gradient-to-r from-gray-300 to-gray-400 rounded-full flex items-center justify-center">
                              <span class="text-white font-bold text-sm">2</span>
                            </div>
                          <% elsif index == 2 %>
                            <div class="w-8 h-8 bg-gradient-to-r from-orange-400 to-orange-600 rounded-full flex items-center justify-center">
                              <span class="text-white font-bold text-sm">3</span>
                            </div>
                          <% else %>
                            <div class="w-8 h-8 bg-gradient-to-r from-indigo-400 to-indigo-600 rounded-full flex items-center justify-center">
                              <span class="text-white font-bold text-sm"><%= index + 1 %></span>
                            </div>
                          <% end %>
                        </div>
                        <div class="ml-4 min-w-0 flex-1">
                          <%= link_to campaign_path(campaign[:id]), class: "text-sm font-semibold text-gray-900 hover:text-purple-600 truncate block transition-colors duration-200" do %>
                            <%= campaign[:name] %>
                          <% end %>
                          <p class="text-xs text-gray-500 truncate"><%= campaign[:subject] %></p>
                        </div>
                      </div>
                    </div>
                    <div class="ml-4 flex-shrink-0 text-right">
                      <div class="text-lg font-bold text-gray-900">
                        <%= number_to_percentage(campaign[:open_rate], precision: 1) %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= pluralize(campaign[:opens], 'open') %> / <%= pluralize(campaign[:sent], 'sent') %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-8">
                <div class="p-4 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl inline-block mb-4">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <p class="text-sm font-medium text-gray-600">No campaigns found for the selected period</p>
                <p class="text-xs text-gray-500 mt-1">Try adjusting your date range</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Detailed Analytics Section -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Recent Campaign Performance -->
      <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
        <div class="p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
              <div class="p-3 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl mr-4">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">Recent Campaigns</h3>
                <p class="text-sm text-gray-600">Latest campaign performance</p>
              </div>
            </div>
            <%= link_to analytics_campaigns_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white text-sm font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 transform hover:scale-105 transition-all duration-200 shadow-md" do %>
              View All
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>
          <div class="space-y-4">
            <% if @campaign_performance.any? %>
              <% @campaign_performance.first(5).each do |campaign_data| %>
                <div class="group p-4 bg-white/60 rounded-xl hover:bg-white hover:shadow-md transition-all duration-200">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-xl flex items-center justify-center mr-3">
                          <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                        </div>
                        <div class="min-w-0 flex-1">
                          <%= link_to campaign_data[:name], campaign_path(campaign_data[:id]), class: "text-sm font-semibold text-gray-900 hover:text-indigo-600 truncate block transition-colors duration-200" %>
                          <div class="flex items-center mt-1">
                            <span class="text-xs text-gray-500"><%= time_ago_in_words(campaign_data[:sent_at]) %> ago</span>
                            <span class="mx-2 text-gray-300">â€¢</span>
                            <span class="text-xs text-gray-600 font-medium"><%= number_with_delimiter(campaign_data[:emails_sent]) %> sent</span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="ml-4 text-right">
                      <div class="text-lg font-bold text-gray-900"><%= number_to_percentage(campaign_data[:open_rate], precision: 1) %></div>
                      <div class="text-xs text-gray-500"><%= number_with_delimiter(campaign_data[:opens]) %> opens</div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-8">
                <div class="p-4 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl inline-block mb-4">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <p class="text-sm font-medium text-gray-600">No recent campaigns found</p>
                <p class="text-xs text-gray-500 mt-1">Create your first campaign to see analytics</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Contact Growth -->
      <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
        <div class="p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
              <div class="p-3 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl mr-4">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">Contact Growth</h3>
                <p class="text-sm text-gray-600">Subscriber analytics</p>
              </div>
            </div>
            <%= link_to analytics_contacts_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-600 text-white text-sm font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-700 transform hover:scale-105 transition-all duration-200 shadow-md" do %>
              View Details
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>
          
          <!-- Growth Metrics -->
          <div class="grid grid-cols-2 gap-6 mb-8">
            <div class="text-center p-4 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl">
              <div class="flex items-center justify-center mb-2">
                <svg class="h-5 w-5 text-green-500 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
                </svg>
                <span class="text-2xl font-bold text-green-600"><%= @contact_growth[:new_contacts] %></span>
              </div>
              <div class="text-sm font-medium text-green-700">New Contacts</div>
              <div class="text-xs text-green-600 mt-1">This period</div>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-red-50 to-pink-50 rounded-xl">
              <div class="flex items-center justify-center mb-2">
                <svg class="h-5 w-5 text-red-500 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6" />
                </svg>
                <span class="text-2xl font-bold text-red-600"><%= @contact_growth[:unsubscribed] %></span>
              </div>
              <div class="text-sm font-medium text-red-700">Unsubscribed</div>
              <div class="text-xs text-red-600 mt-1">This period</div>
            </div>
          </div>
          
          <!-- Subscription Status -->
          <div class="space-y-4">
            <h4 class="text-sm font-semibold text-gray-700 mb-3">Subscription Overview</h4>
            <div class="space-y-3">
              <div class="flex items-center justify-between p-3 bg-white/60 rounded-xl">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-700">Active Subscribers</span>
                </div>
                <span class="text-sm font-bold text-gray-900"><%= number_with_delimiter(@contact_growth[:subscribed]) %></span>
              </div>
              <div class="flex items-center justify-between p-3 bg-white/60 rounded-xl">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-red-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-700">Total Unsubscribed</span>
                </div>
                <span class="text-sm font-bold text-gray-900"><%= number_with_delimiter(@contact_growth[:total_unsubscribed]) %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>