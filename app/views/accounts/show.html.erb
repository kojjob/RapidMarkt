<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
  <div class="container mx-auto px-6 py-12">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-2xl shadow-lg mb-6 transform hover:scale-105 transition-transform duration-300">
        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2M7 7h10M7 11h4m6 0h2m-8 4h6m-6 4h6" />
        </svg>
      </div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-blue-900 to-indigo-900 bg-clip-text text-transparent mb-4">Account Overview</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">Manage your account settings, view usage statistics, and monitor your team members.</p>
    </div>

    <!-- Account Statistics -->
    <div class="mb-12">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Usage Statistics</h2>
        <p class="text-gray-600">Current month's activity and account metrics</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        <!-- Campaigns This Month -->
        <div class="group bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-purple-100 text-sm font-medium mb-1">Campaigns</p>
              <p class="text-white text-3xl font-bold"><%= number_with_delimiter(@usage_stats[:campaigns_this_month]) %></p>
              <p class="text-purple-200 text-xs mt-1">This month</p>
            </div>
            <div class="p-3 bg-white/20 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Emails Sent This Month -->
        <div class="group bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-green-100 text-sm font-medium mb-1">Emails Sent</p>
              <p class="text-white text-3xl font-bold"><%= number_with_delimiter(@usage_stats[:emails_sent_this_month]) %></p>
              <p class="text-green-200 text-xs mt-1">This month</p>
            </div>
            <div class="p-3 bg-white/20 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Total Contacts -->
        <div class="group bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-blue-100 text-sm font-medium mb-1">Contacts</p>
              <p class="text-white text-3xl font-bold"><%= number_with_delimiter(@usage_stats[:contacts_count]) %></p>
              <p class="text-blue-200 text-xs mt-1">Total</p>
            </div>
            <div class="p-3 bg-white/20 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Templates -->
        <div class="group bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-orange-100 text-sm font-medium mb-1">Templates</p>
              <p class="text-white text-3xl font-bold"><%= number_with_delimiter(@usage_stats[:templates_count]) %></p>
              <p class="text-orange-200 text-xs mt-1">Available</p>
            </div>
            <div class="p-3 bg-white/20 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Storage Used -->
        <div class="group bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl p-6 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border-0">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-indigo-100 text-sm font-medium mb-1">Storage</p>
              <p class="text-white text-3xl font-bold"><%= number_to_human_size(@usage_stats[:storage_used]) %></p>
              <p class="text-indigo-200 text-xs mt-1">Used</p>
            </div>
            <div class="p-3 bg-white/20 rounded-xl">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Account Information -->
      <div class="lg:col-span-2">
        <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
          <div class="px-8 py-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center">
                <div class="p-3 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl mr-4">
                  <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2M7 7h10M7 11h4m6 0h2m-8 4h6m-6 4h6" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900">Account Information</h3>
                  <p class="text-gray-600">Your account details and settings</p>
                </div>
              </div>
              <%= link_to edit_account_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transform hover:scale-105 transition-all duration-200 shadow-lg" do %>
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit Account
              <% end %>
            </div>
          </div>
          <div class="px-8 pb-8">
            <div class="space-y-6">
              <div class="flex items-center justify-between py-4 border-b border-gray-100">
                <dt class="text-sm font-semibold text-gray-700">Account Name</dt>
                <dd class="text-sm text-gray-900 font-medium"><%= @account.name %></dd>
              </div>
              <% if @account.business_type.present? %>
                <div class="flex items-center justify-between py-4 border-b border-gray-100">
                  <dt class="text-sm font-semibold text-gray-700">Business Type</dt>
                  <dd class="text-sm text-gray-900 font-medium"><%= @account.business_type %></dd>
                </div>
              <% end %>
              <% if @account.industry.present? %>
                <div class="flex items-center justify-between py-4 border-b border-gray-100">
                  <dt class="text-sm font-semibold text-gray-700">Industry</dt>
                  <dd class="text-sm text-gray-900 font-medium"><%= @account.industry %></dd>
                </div>
              <% end %>
              <% if @account.website.present? %>
                <div class="flex items-center justify-between py-4 border-b border-gray-100">
                  <dt class="text-sm font-semibold text-gray-700">Website</dt>
                  <dd class="text-sm text-gray-900 font-medium">
                    <%= link_to @account.website, @account.website, target: "_blank", class: "text-indigo-600 hover:text-indigo-800 underline" %>
                  </dd>
                </div>
              <% end %>
              <div class="flex items-center justify-between py-4 border-b border-gray-100">
                <dt class="text-sm font-semibold text-gray-700">Plan</dt>
                <dd class="text-sm text-gray-900 font-medium">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 capitalize">
                    <%= @account.plan %>
                  </span>
                </dd>
              </div>
              <div class="flex items-center justify-between py-4 border-b border-gray-100">
                <dt class="text-sm font-semibold text-gray-700">Status</dt>
                <dd class="text-sm text-gray-900 font-medium">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @account.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> capitalize">
                    <%= @account.status %>
                  </span>
                </dd>
              </div>
              <div class="flex items-center justify-between py-4 border-b border-gray-100">
                <dt class="text-sm font-semibold text-gray-700">Created</dt>
                <dd class="text-sm text-gray-900 font-medium">
                  <%= @account.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
              <div class="flex items-center justify-between py-4">
                <dt class="text-sm font-semibold text-gray-700">Subdomain</dt>
                <dd class="text-sm text-gray-900 font-medium">
                  <code class="bg-gray-100 px-2 py-1 rounded text-xs"><%= @account.subdomain %></code>
                </dd>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Subscription Info -->
        <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300 mb-6">
          <div class="px-6 py-6">
            <div class="flex items-center mb-4">
              <div class="p-3 bg-gradient-to-r from-green-500 to-teal-600 rounded-xl mr-3">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Subscription</h3>
                <p class="text-sm text-gray-600">Current plan</p>
              </div>
            </div>
          </div>
          <div class="px-6 pb-6">
            <% if @subscription %>
              <div class="bg-gradient-to-r from-green-50 to-teal-50 rounded-xl p-4 mb-4">
                <div class="text-center">
                  <div class="text-2xl font-bold text-green-800 capitalize"><%= @subscription.plan %></div>
                  <div class="text-sm text-green-600 mt-1">Active subscription</div>
                </div>
              </div>
              <div class="space-y-3">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Status</span>
                  <span class="font-medium text-green-600 capitalize"><%= @subscription.status %></span>
                </div>
                <% if @subscription.current_period_end %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Renews</span>
                    <span class="font-medium text-gray-900"><%= @subscription.current_period_end.strftime("%b %d, %Y") %></span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
                <p class="mt-2 text-gray-500 italic">No active subscription</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Team Members -->
        <div class="bg-white/70 backdrop-blur-sm shadow-lg rounded-2xl border-0 hover:shadow-xl transition-all duration-300">
          <div class="px-6 py-6">
            <div class="flex items-center mb-4">
              <div class="p-3 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl mr-3">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900">Team Members</h3>
                <p class="text-sm text-gray-600"><%= pluralize(@team_members.count, 'member') %></p>
              </div>
            </div>
          </div>
          <div class="px-6 pb-6">
            <% if @team_members.any? %>
              <div class="space-y-3">
                <% @team_members.limit(5).each do |member| %>
                  <div class="flex items-center p-3 bg-gray-50 rounded-xl">
                    <div class="w-8 h-8 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full flex items-center justify-center mr-3">
                      <span class="text-white text-sm font-semibold"><%= member.email.first.upcase %></span>
                    </div>
                    <div class="flex-1">
                      <div class="text-sm font-medium text-gray-900"><%= member.email %></div>
                      <div class="text-xs text-gray-500">Member since <%= member.created_at.strftime("%b %Y") %></div>
                    </div>
                  </div>
                <% end %>
                <% if @team_members.count > 5 %>
                  <div class="text-center pt-2">
                    <span class="text-sm text-gray-500">and <%= @team_members.count - 5 %> more...</span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <p class="mt-2 text-gray-500 italic">No team members</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>